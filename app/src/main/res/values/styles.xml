<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ColorPicker" parent="Theme.Material3.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowTitleStyle">@style/LightPickerDialogTitleStyle</item>
        <item name="android:dialogCornerRadius">24dp</item>
        <item name="android:buttonCornerRadius">24dp</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:fontFamily">@font/normal</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="cpv_hashColor">@color/textColorPrimary</item>
    </style>

    <style name="LightPickerDialogTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Material.DialogWindowTitle
        </item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    
    <style name="customSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
    </style>

    <style name="SeekBar.Nebula" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorBackground</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@color/colorAccent</item>
    </style>
</resources>